mixin event(bg, date, time, title, text)
    - let mixinClass = ''
    if attributes.class 
        - mixinClass = ' ' + attributes.class

    
    div(class!= 'event' + mixinClass) 
        if bg  
            img.event__bg-img(src=bg, alt='event-bg')
        .event__dates
            span.event__time= time
            span.event__date= date
        h3.event__title= title
        p.event__text= text
        .event__stat
            .views.event__views
                img.views__icon(src='./src/svg/icon-eye.svg')
                p.views__count 275
            .comments.event__comments
                img.comments__icon(src='./src/svg/icon-comments.svg')
                p.comments__count 15
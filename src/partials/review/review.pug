mixin review(author, date, text)
    div(class!= 'review ' + attributes.class)
        .review__row
            p.review__author= author
            p.review__date= date
        .review__rating
            img.review__star(src='./src/svg/icon-star.svg')
            img.review__star(src='./src/svg/icon-star.svg')
            img.review__star(src='./src/svg/icon-star.svg')
            img.review__star(src='./src/svg/icon-star.svg')
            img.review__star(src='./src/svg/icon-star-empty.svg')
        .review__text-container
            p.review__text= text
            .review__scroll
